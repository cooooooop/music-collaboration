<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.main
		{
			border-bottom-style: solid;
		    border-color: #FFF;
		    color: #00123D;
		}
		
		.label
		{
			cursor: pointer;	
		}
		
		.login
		{
			font-size: x-small;
		}
	</ui:style>
	
	<g:HorizontalPanel width="20em" height="2em" verticalAlignment="ALIGN_MIDDLE" styleName="{style.main}">
		<g:cell horizontalAlignment="ALIGN_LEFT">
	        <g:Label ui:field="nameLabel" styleName="{style.label}"/>
        </g:cell>
        <g:cell horizontalAlignment="ALIGN_RIGHT">
	        <g:Label ui:field="loginLabel" styleName="{style.login}"/>
        </g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 