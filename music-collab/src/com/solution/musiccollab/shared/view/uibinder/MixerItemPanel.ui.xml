<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		
        .main
		{
			background-color: #00CC33;
			border                      :   1px solid #000;
    		border-width                :   1px 1px;
		}
		
		.title
		{
			color: #001C5E;
		}
		
		.labels
		{
			color: #FFF;
			white-space: nowrap;
			font-size: x-small;
		}
		
		
	</ui:style>
	
	<g:HorizontalPanel width="20em" height="3em" styleName="{style.main}">
		<g:VerticalPanel>
	        <g:Label ui:field="fileNameLabel" styleName="{style.title}"/>
	        <g:HorizontalPanel>
		        <g:Label text="Start Time" styleName="{style.labels}"/>
		        <g:TextBox ui:field="startTimeTextBox" width="1em"/>
		        <g:Label text="Trim Start Time" styleName="{style.labels}"/>
		        <g:TextBox ui:field="trimStartTimeTextBox" width="1em"/>
		        <g:Label text="Trim End Time" styleName="{style.labels}"/>
		        <g:TextBox ui:field="trimEndTimeTextBox" width="1em"/>
	        
	        </g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 