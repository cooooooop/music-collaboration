<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
        .main
		{
        	border-bottom-style: solid;
		    border-color: #FFF;
		}
		
		.title
		{
			color: #001C5E;
		}
		
		.subtitle
		{
			color: #2C53AE;
			cursor: pointer;
		}
		
		.listens
		{
			
			white-space: nowrap;
		}
		
	</ui:style>
	
	<g:HorizontalPanel width="30em" height="3em" styleName="{style.main}">
		<g:cell width="100%" horizontalAlignment="ALIGN_LEFT">
	        <g:VerticalPanel spacing="0">
		        <g:Label ui:field="fileNameLabel" styleName="{style.title}"/>
		        <g:Label ui:field="fileOwnerLabel" styleName="{style.subtitle}"/>
			     <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
			        <g:Button ui:field="downloadButton" text="Download" />
			        <g:Button ui:field="playStopButton" text="Play"/>
			        <g:CheckBox ui:field="loopingCheckBox" text="repeat" wordWrap="false"/>
			     </g:HorizontalPanel>
	        </g:VerticalPanel>
        </g:cell>
        <g:cell width="100%" horizontalAlignment="ALIGN_RIGHT">
	        <g:VerticalPanel spacing="0" height="100%">
	        	<g:cell width="100%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
			        <g:HTML ui:field="commercialUseHTML"/>
	        	</g:cell>
	        	<g:cell width="100%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM">
		        	<g:Label ui:field="downloadsLabel" styleName="{style.listens}"/>
	        	</g:cell>
	        </g:VerticalPanel>
        </g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 