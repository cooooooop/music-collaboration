<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.menu
		{
        	border                      :   1px solid #666;
    		border-width                :   1px 1px;
        	cursor: pointer;
		    margin                      :   0 auto;
		    font-size                   :   80%;
		    background-color            :   #eee;
		}
		.menu .gwt-MenuItem
		{
			cursor: pointer;
		    border-left                 :   1px solid #999;
		    border-right                :   1px solid #999;
		    background-color            :   #eee;
		    padding                     :   0 10px;
		    white-space					: 	nowrap;
		    float						:	right;
		}
		.menu .gwt-MenuItem-selected
		{
			cursor: pointer;
		    background-color            :   #ace;
		    float						:	right;
		}
		
		.login
		{
			white-space:nowrap;
		}
		
		.label
		{
			white-space: nowrap;
			color: #222;
			-webkit-user-select: none;
			-khtml-user-select: none;
			-moz-user-select: none;
			-o-user-select: none;
			user-select: none;
		}
		
        .main
		{
        	border-bottom-style: solid;
		    border-color: #FFF;
		}
		
		.title
		{
			cursor: pointer;
			color: #001C5E;
		}
		
		.upload
		{
			color: #4D5D83;
			font-size: x-small;
		}
		
		.subtitle
		{
			color: #2C53AE;
			font-size: small;
			cursor: pointer;
			padding-left: 5;
		}
		
		.listens
		{
			
			white-space: nowrap;
		}
		
	</ui:style>
	
	<g:HorizontalPanel width="30em" height="3em" styleName="{style.main}">
		<g:cell width="100%" horizontalAlignment="ALIGN_LEFT">
	        <g:VerticalPanel>
		        <g:HorizontalPanel verticalAlignment="ALIGN_TOP">
			        <g:Label ui:field="fileNameLabel" styleName="{style.title}"/>
			        <g:Label width="1em"/>
			        <g:Label ui:field="uploadDateLabel" styleName="{style.upload}"/>
		        </g:HorizontalPanel>
		        <g:Label ui:field="fileOwnerLabel" styleName="{style.subtitle}"/>
			    <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
			        <g:Button ui:field="downloadButton" text="Download" />
			        <g:Button ui:field="playStopButton" text="Play"/>
			        <g:Button ui:field="jamButton" text="Editor"/>
			        <g:Button ui:field="deleteButton" text="Delete"/>
			        <!-- <g:CheckBox ui:field="loopingCheckBox" text="repeat" wordWrap="false"/> -->
			     </g:HorizontalPanel>
	        </g:VerticalPanel>
        </g:cell>
        <g:cell width="100%" horizontalAlignment="ALIGN_RIGHT">
	        <g:VerticalPanel spacing="0" height="100%">
	        	<g:cell width="100%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
			        <g:HTML ui:field="commercialUseHTML"/>
	        	</g:cell>
	        	<g:cell width="100%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM">
		        	<g:Label ui:field="downloadsLabel" styleName="{style.listens}"/>
	        	</g:cell>
	        </g:VerticalPanel>
        </g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 